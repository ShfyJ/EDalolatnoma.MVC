@model EDalolatnoma.MVC.Models.PermissionViewModel

<br />
<div class="card">
    <br />
        <h1 class="card-tittle text-center">Управление доступом</h1>

    <div id="viewAll" class="card-body table-responsive">
        <form asp-controller="permission" method="post" asp-action="Update" class="d-inline">
            <input asp-for="@Model.RoleId" type="hidden" />
            <table class="table table-hover" id="permissionTable">
                <thead>
                    <tr>
                       <th class="col-sm-1"></th>
                        <th class="col-md-4">
                            Доступ
                        </th>
                        <th>
                           Статус
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 0; i < Model.RoleClaims.Count(); i++)
                    {
                        <tr>
                            <td></td>
                            <td>
                                <input asp-for="@Model.RoleClaims[i].Value" type="hidden" />
                                @Model.RoleClaims[i].Value
                            </td>
                            <td>
                                <div class="form-check m-1">
                                    <input asp-for="@Model.RoleClaims[i].Selected" class="form-check-input" />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
           
            <div class="col-sm-12 pull-right" style="padding: 20px 20px 0px 0px">
              <a asp-controller="Roles" asp-action="Index" class="btn btn-default"><i class="fa fa-solid fa-reply"></i></a>
              <button type="submit" id="save" class="btn btn-success pull-right">
                    <i class="fa fa-check"></i>
                    Сохранить
                </button>
            </div>
        </form>
    </div>
</div>