@model EDalolatnoma.MVC.Models.ManageUserRolesViewModel
<h3></h3>
<br />
<div class="card">
    <div class="card-header">
        <h1 class="card-title">
          Роль для @ViewBag.user
        </h1>
    </div>
   
    <div id="viewAll" class="card-body table-responsive">
        <form asp-controller="userroles" method="post" asp-action="update" asp-route-id="@Model.UserId" class="d-inline">
            <input asp-for="@Model.UserId" type="hidden" />
            <table class="table table-striped" id="userRolesTable">
                <thead>
                    <tr>
                        <th>
                            Роль
                        </th>
                        <th>
                            Статус
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 0; i < Model.UserRoles.Count(); i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="@Model.UserRoles[i].RoleName" type="hidden" />
                                @Model.UserRoles[i].RoleName
                            </td>
                            <td>
                                <div class="form-check m-1">
                                    <input asp-for="@Model.UserRoles[i].Selected" class="form-check-input" />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


             <a asp-controller="Users" class="btn btn-default" asp-action="Index"><i class="fa fa-solid fa-reply"></i></a>
             <button type="submit" id="save" class="btn btn-success pull-right"><i class="fa fa-check"></i> Сохранить</button>

            
        </form>
    </div>
</div>