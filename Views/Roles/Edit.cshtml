@using Microsoft.AspNetCore.Identity;
@model IdentityRole

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="card">
        <div class="card-header"> <h3 class="card-title">Редактирования </h3></div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Роль</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-controller="Roles" class="btn btn-default" asp-action="Index"><i class="fa fa-solid fa-reply"></i></a>
                    <button type="submit" class="btn btn-success pull-right"><i class="fa fa-check"></i> Сохранить</button>
                </div>
            </form>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
