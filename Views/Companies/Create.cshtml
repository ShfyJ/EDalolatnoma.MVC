@model Company

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-outline card-primary">
            <div class="card-header">
                <h3 class="card-title">Новая организация</h3>
                <div class="card-tools">
                </div>
                <!-- /.card-tools -->
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="CompanyFullName" class="control-label"></label>
                                <input asp-for="CompanyFullName" class="form-control" />
                                <span asp-validation-for="CompanyFullName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CompanyShortName" class="control-label"></label>
                                <input asp-for="CompanyShortName" class="form-control" />
                                <span asp-validation-for="CompanyShortName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Inn" class="control-label"></label>
                                <input asp-for="Inn" class="form-control" />
                                <span asp-validation-for="Inn" class="text-danger"></span>
                            </div>
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <button type="submit" class="btn btn-outline-success pull-right"><i class="fas fa-save"></i> Сохранить</button>
                                <a asp-action="Index" class="btn btn-outline-secondary pull-left"><i class="fas fa-arrow-circle-left"></i> Назад в список</a>
                            </div>

                        </form>
                    </div>

                    <div class="col-md-3"></div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
