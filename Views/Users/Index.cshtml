@using Microsoft.AspNetCore.Identity;
@model IEnumerable<ApplicationUser>
<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-users text-secondary"></i> Список пользователей</h3>
        <div class="card-tools"><a class="btn btn-outline-primary btn-sm" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-plus-circle"></i> Добавить</a></div>
    </div>
    <div class="card-body">

        <table class="table table-striped table-hover display nowrap" id="usersTable" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Пользователь
                    </th>
                    <th>
                        Email
                    </th>
                    <th>Организация</th>
                    <th>
                        Роль
                    </th>
                    <th style="width:10%">
                        #
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <div class="row">
                                <div class="col-sm">
                                    <a>
                                        @user.FioName
                                    </a>
                                    <br>
                                    <small class="text-muted">
                                        @user.Position
                                    </small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <a>
                                @user.Email
                            </a>
                        </td>
                        <td>
                            @user.Company
                        </td>
                        <td>
                            @user.Roles
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Управление
                                </button>
                                <div class="dropdown-menu shadow animated--grow-in">
                                    <a style='margin-right:16px' asp-controller="userroles" asp-action="Index" asp-route-userId="@user.Id" class="dropdown-item">
                                        <i class="fas fa-wrench"></i> Роль
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer"></div>
</div>
